<h1>Users#indexユーザー一覧（Twitterには無い）</h1>
<p>Find me in app/views/users/index.html.erb</p>

<% @users.each do |user| %>
  <hr>
  <p><span>email: </span><%=link_to user.email, user_path(user.id) %></p>


  <% if current_user != user %>
    <% if user.followed_by?(current_user) %>
      <%= link_to "フォロー済み", user_relations_path(user.id),method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relations_path(user.id),method: :post %>
    <% end %>
  <% end %>
<% end %>

